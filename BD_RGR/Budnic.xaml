<Window x:Class="shitproject.Budnic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shitproject="clr-namespace:shitproject"
        Title="Budnic" Height="300" Width="300">
    <Grid>
        <TabControl Margin="0">
            <TabItem Header="Realize">
                <shitproject:RealizeView Margin="5" Width="Auto" Height="Auto" Database="{Binding Database, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shitproject:Budnic}}}" />
            </TabItem>
            <TabItem Header="Preparat">
                <shitproject:PreparatsView Margin="5" Width="Auto" Height="Auto" Database="{Binding Database, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shitproject:Budnic}}}" />
            </TabItem>
            <TabItem Header="Income">
                <shitproject:IncomeView Margin="5" Width="Auto" Height="Auto" Database="{Binding Database, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shitproject:Budnic}}}" />
            </TabItem>
            <TabItem Header="Provider">
                <shitproject:ProvidersView Margin="5" Width="Auto" Height="Auto" Database="{Binding Database, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shitproject:Budnic}}}" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
